# SignSync AI Backend Configuration

# MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=signsync

# AWS Region
AWS_REGION=us-east-1

# SonZo SLR API (Sign Language Recognition)
SONZO_SLR_API_URL=https://api.sonzo.io
SONZO_SLR_API_KEY=your_api_key_here

# GenASL - AWS GenAI ASL Avatar Configuration
# Enable/disable GenASL realistic avatar videos
GENASL_ENABLED=true

# AWS Step Functions State Machine ARN (created by genasl-cloudformation.yaml)
GENASL_STATE_MACHINE_ARN=arn:aws:states:us-east-1:YOUR_ACCOUNT_ID:stateMachine:genasl-video-generator-production

# S3 bucket for GenASL videos (created by genasl-cloudformation.yaml)
GENASL_VIDEOS_BUCKET=genasl-videos-YOUR_ACCOUNT_ID-production

# DynamoDB table for sign mappings (created by genasl-cloudformation.yaml)
GENASL_SIGNS_TABLE=genasl-signs-production

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in your Stripe Dashboard under Products)
STRIPE_PRO_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_enterprise_annual_id

# Frontend URL (for Stripe redirect URLs)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://sonzo.io,https://signedword.sonzo.io

# Intake form email + SQLite
INTAKE_DB_PATH=/var/www/sonzo/data/intake.db
INTAKE_EMAIL_TO=info@sonzo.io
SMTP_HOST=smtp.mail.us-east-1.awsapps.com
SMTP_PORT=587
SMTP_USERNAME=info@sonzo.io
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=info@sonzo.io
