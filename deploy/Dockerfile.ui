# SonZo AI - UI Service Dockerfile
FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    pydantic

# Copy UI code
COPY ui/ /app/ui/

# Create data directory
RUN mkdir -p /data

EXPOSE 8081

CMD ["python", "-m", "uvicorn", "ui.api:app", "--host", "0.0.0.0", "--port", "8081"]
