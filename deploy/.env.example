# ============================================================================
# SonZo AI - EC2 Deployment Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#   nano .env
# ============================================================================

# ── MongoDB ──────────────────────────────────────
MONGO_URL=mongodb://mongodb:27017
DB_NAME=signsync

# ── AWS ──────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ── SonZo SLR API (Sign Language Recognition) ────
SONZO_SLR_API_URL=https://api.sonzo.io
SONZO_SLR_API_KEY=your_api_key_here

# ── GenASL (AWS GenAI ASL Avatar) ────────────────
GENASL_ENABLED=true
GENASL_STATE_MACHINE_ARN=arn:aws:states:us-east-1:YOUR_ACCOUNT_ID:stateMachine:genasl-video-generator-production
GENASL_VIDEOS_BUCKET=genasl-videos-YOUR_ACCOUNT_ID-production
GENASL_SIGNS_TABLE=genasl-signs-production

# ── Stripe Payment Processing ────────────────────
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_PRO_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_enterprise_annual_id

# ── Application URLs ────────────────────────────
FRONTEND_URL=https://app.sonzo.io
CORS_ORIGINS=https://app.sonzo.io,https://sonzo.io,https://www.sonzo.io

# ── GPU Services ─────────────────────────────────
# Set to 1 to run recognition in demo mode (no GPU needed)
DEMO_MODE=0
